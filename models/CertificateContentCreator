const mongoose = require("mongoose");
const { Schema } = mongoose;

// Class description
const CertificateContentCreatorSchema = new Schema({
  creator: {
    type: Schema.Types.ObjectId,
    ref: "content-creators",
  },
  title: {
    type: String,
    required: [true, "Title is required"],
  },
  category: {
    type: String,
    enum: [
      "personal finance",
      "health and workplace safety",
      "sewing",
      "electronics",
    ],
  },
  rating: {
    type: Number,
    default: 0,
  },
  numOfSubscriptions: {
    type: Number,
    default: 0,
  },
  dateCreated: Date,
  dateUpdated: Date,
});

const CertificateContentCreatorModel = mongoose.model(
  "creator-certificates",
  CertificateContentCreatorSchema
);

module.exports = { CertificateContentCreatorModel };
